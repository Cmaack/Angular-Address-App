
<section ng-controller="ContactsController">

  <!-- NewContact Modal Trigger -->
  <div class="container" id="header">
<div class="row">
<h1><span class="glyphicon glyphicon-book"></span> Book</h1>
</div>
<h2 class="pull-right">Remember your Peeps | <small>with peoplr</small></h2>


  <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalNorm">
      New Contact
  </button>
  </div>
</div>

<hr>
<!--==========================ADD CONTACT FORM=================================  -->

                          <!-- NewContact Modal -->
  <div class="modal fade" id="myModalNorm" tabindex="-1" role="dialog"
       aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <!-- Modal Header -->
              <div class="modal-header">
                  <button type="button" class="close"
                     data-dismiss="modal">
                         <span aria-hidden="true">&times;</span>
                         <span class="sr-only">Close</span>
                  </button>
                  <h4 class="modal-title" id="myModalLabel">
                      New Contact Info
                  </h4>
              </div>

              <!-- Modal Body -->
          <div class="modal-body">
            <form ng-submit="createContact()">
              <div class="new-contact-form">
                  <div class="form-group">
                    <label class="control-label" for="text-input">First Name</label>
                    <input type="text" ng-model="newContact.first_name" placeholder="FIRST" class="form-control">
                  </div>
                  <div class="form-group">
                    <label class="control-label" for="text-input">Last Name</label>
                    <input type="text" ng-model="newContact.last_name" placeholder="LAST" class="form-control">
                  </div>
                  <div class="form-group">
                    <label class="control-label" for="text-input">Phone</label>
                    <input type="text" ng-model="newContact.phone_number" placeholder="PHONE" class="form-control">
                  </div>
                  <div class="form-group">
                    <label class="control-label" for="text-input">Email</label>
                    <input type="text" ng-model="newContact.email" placeholder="EMAIL" class="form-control">
                  </div>
                  <div class="form-group">
                    <label class="control-label" for="text-input">Street Address</label>
                    <input type="text" ng-model="newContact.street_address" placeholder="STREET ADDRESS" class="form-control">
                  </div>
                  <div class="form-group">
                    <label class="control-label" for="text-input">City</label>
                    <input type="text" ng-model="newContact.city" placeholder="CITY" class="form-control">
                  </div>
                  <div class="form-group">
                    <label class="control-label" for="text-input">Zip/Postal Code</label>
                    <input type="text" ng-model="newContact.zip" placeholder="ZIP" class="form-control">
                  </div>
                  <div class="form-group">
                    <label class="control-label" for="text-input">State</label>
                    <input type="text" ng-model="newContact.state" placeholder="STATE" class="form-control">
                  </div>
                  <div class="form-group">
                    <label class="control-label" for="text-input">Country</label>
                    <input type="text" ng-model="newContact.country" placeholder="COUNTRY" class="form-control">
                  </div>
                    <button type="submit" name="button" class="btn btn-primary" data-dismiss="modal">Add Contact</button>
                </div>
            </form>
          </div>

              <!-- Modal Footer -->
              <div class="modal-footer">
                  <button type="button" class="btn btn-danger"data-dismiss="modal">Cancel</button>
              </div>
          </div>      <!-- END FORM MODAL -->
      </div>
  </div>
                          <!-- END NewContact Modal -->

<!--==========================RENDER CONTACT LIST==============================  -->
                          <!-- Start List View Display -->

<div ng-repeat="contact in contacts">
  <div class="container" id="list-view">
      <div class="span3 well">
          <center>
          <a href="#aboutModal" data-toggle="modal" data-target="#myModal"><img src="http://www.sheffield.com/wp-content/uploads/2013/06/placeholder.png" name="aboutme" width="140" height="140" class="img-circle"></a>
          <h3>{{ contact.first_name }} {{ contact.last_name }}</h3>

<button ng-click="deleteContact($index)" class="btn btn-danger btn-sm" id="button-delete"><span class="glyphicon glyphicon-trash"></span></button>
  		</center>

      </div>
      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
              <div class="modal-content">
                  <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                      <h4 class="modal-title" id="myModalLabel">{{ contact.first_name }} {{ contact.last_name }}'s Info</h4>
                      </div>
                  <div class="modal-body">
    <!-- TAB VIEW -->
                      <div class="container" id="contact-tab-view">
                          <center>
                          <div class="row">
                            <div class="col-md-4 col-sm-5">
                              <div class="tabs-left">
                                <ul class="nav nav-tabs">

                                  <li class="active"><a href="#c" data-toggle="tab"><span class="glyphicon glyphicon-user"></span></a></li>
                                  <li><a href="#d" data-toggle="tab"><span class="glyphicon glyphicon-phone"></span></a></li>
                                  <li><a href="#e" data-toggle="tab"><span class="glyphicon glyphicon-envelope"></span></a></li>
                                  <li><a href="#f" data-toggle="tab"><span class="glyphicon glyphicon-home"></span></a></li>
                                </ul>
                                <div class="tab-content">

                                  <div class="tab-pane" id="c">
                                    <img src="http://www.sheffield.com/wp-content/uploads/2013/06/placeholder.png" name="aboutme" width="100" height="100" class="img-circle">
                                    <h3> {{ contact.first_name }} {{ contact.last_name }} </h3>
                                      <h4>Bio</h4>
                                    <h5>This is will a breif contact-bio.</h5>
                                  </div>
                                  <div class="tab-pane" id="d">
                                    <img src="http://www.sheffield.com/wp-content/uploads/2013/06/placeholder.png" name="aboutme" width="100" height="100" class="img-circle">
                                    <h3> {{ contact.first_name }} {{ contact.last_name }} </h3>
                                      <h4>Phone</h4>
                                    <h5>{{ contact.phone_number }}</h5>

                                  </div>
                                  <div class="tab-pane" id="e">

                                    <img src="http://www.sheffield.com/wp-content/uploads/2013/06/placeholder.png" name="aboutme" width="100" height="100" class="img-circle">
                                    <h3> {{ contact.first_name }} {{ contact.last_name }} </h3>
                                    <h4>Primary Email: </h4>
                                      <h5>{{ contact.street_address }}</h5>

                                  </div>
                                  <div class="tab-pane" id="f">
                                    <div class="render-address">
                                      <img src="http://www.sheffield.com/wp-content/uploads/2013/06/placeholder.png" name="aboutme" width="100" height="100" class="img-circle">
                                      <h3> {{ contact.first_name }} {{ contact.last_name }} </h3>
                                      <h4>Address: </h4>
                                        <h5>{{ contact.street_address }}</h5>
                                        <h5>{{ contact.city }}, {{ contact.state }} {{ contact.zip }}</h5>
                                        <h6>{{ contact.country}}</h6>
                                    </div>

                                  </div>
                                </div><!-- /tab-content -->
                              </div><!-- /tabbable -->
                            </div><!-- /col -->
                          </div><!-- /row -->
                        </center>
                      </div>

                  </div><!-- end modal body -->

                  <div class="modal-footer">
                      <center>
                      <button type="button" class="btn btn-default" data-dismiss="modal">Dissmiss</button>
                      </center>
                  </div>
              </div>
          </div>
      </div>
    </div>
</div>  <!-- ends NG REPEAT DIRECTIVE -->
</section>






